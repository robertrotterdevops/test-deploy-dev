{
  "index_patterns": ["logs-Azure-02-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "index.lifecycle.name": "hot-cold-frozen",
      "index.lifecycle.rollover_alias": "logs-Azure-02"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "message": {
          "type": "text"
        },
        "log.level": {
          "type": "keyword"
        },
        "kubernetes.namespace": {
          "type": "keyword"
        },
        "kubernetes.pod.name": {
          "type": "keyword"
        }
      }
    }
  }
}
